<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand">Simple Airbnb</a>
    <%= link_to 'Add Flat', new_flat_path, class:'d-flex btn btn-outline-primary' %>
  </div>
</nav>

<div class="container pt-5">
  <h1>All our Flats (<%= @flats.size %>)</h1>
  <br>

  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-lg-4">
        <div class="card mb-4">
          <img src='<%= flat.picture_url %>'>
          <div class="card-body">
            <h5><%= link_to flat.name, flat_path(flat), class:"card-title"%></h5>
            <p class="card-text"><%= flat.address %></p>
            <ul class="d-flex" style="list-style: none">
              <li class="flex-fill"><i class="fa-solid fa-user-group"></i> <%= flat.number_of_guests %></li>
              <li class="flex-fill"><i class="fa-solid fa-yen-sign"></i> <%= flat.price_per_night %></li>
            </ul>
          </div>
          <div class="card-body d-flex">
            <%= link_to 'More info', flat_path(flat), class:"flex-fill" %>
            <%= link_to 'Edit', edit_flat_path(flat), class:"flex-fill" %>
            <%= link_to 'Remove', flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"flex-fill" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
